{
  "name": "@teslemetry/node-red-contrib-teslemetry",
  "version": "0.0.2",
  "description": "Node-RED integration for Teslemetry",
  "main": "dist/index.cjs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsdown src/nodes/*.ts --out-dir dist/nodes --format cjs --clean --bundle && cp src/nodes/*.html dist/nodes/",
    "dev": "pnpm build && mkdir -p .node-red-home && cd .node-red-home && pnpm install .. && cd .. && node-red -u .node-red-home -s dev-settings.js -p 1880",
    "tsc": "tsc",
    "pack": "npm pack"
  },
  "keywords": [
    "node-red",
    "tesla",
    "teslemetry"
  ],
  "author": {
    "name": "Teslemetry",
    "email": "hello@teslemetry.com",
    "url": "https://teslemetry.com"
  },
  "license": "Apache-2.0",
  "files": [
    "dist"
  ],
  "node-red": {
    "nodes": {
      "teslemetry-config": "dist/nodes/teslemetry-config.cjs",
      "teslemetry-vehicle-command": "dist/nodes/teslemetry-vehicle-command.cjs",
      "teslemetry-event": "dist/nodes/teslemetry-event.cjs",
      "teslemetry-signal": "dist/nodes/teslemetry-signal.cjs",
      "teslemetry-energy-command": "dist/nodes/teslemetry-energy-command.cjs"
    }
  },
  "devDependencies": {
    "@teslemetry/api": "workspace:*",
    "node-red": "^4.1.1",
    "tsdown": "^0.16.7"
  },
  "dependencies": {
    "packages": "link:.."
  }
}
